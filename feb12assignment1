oilsq=int(input('no.of oil packets:'))
bill=(dp*dpq)+(bg*bgq)+(gb*gbq)+(hhp*hhpq)+(oils*oilsq)
print('total bill:',bill)
if bill>5000:
   disc=bill*10/100
else bill>3000:
   disc=bill*8/100
   tax=bill*10/100
elif bill>2000:
   disc=bill*5/100
elilf bill>1000:
   disc=bill*3/100
else 
   tax=bill*18/100
   print('tax:',tax)
print('discount:',disc)


