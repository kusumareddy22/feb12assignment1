#program to preapare supermarket bill
dp=24
bg=120
gb=300
hhp=200
oils=60
cname=input('enter customer name:')
cphno=int(input('enter customer phone number:'))
dpq=int(intpu('no.of diary products:'))
bgq=int(input('no.of backed goods:'))
gbq=int(input('no.of grains and bread:'))
